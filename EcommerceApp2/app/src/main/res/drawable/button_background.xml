<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#FF5722" />
            <corners android:radius="25dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#FF9800"
                android:endColor="#F44336"
                android:angle="90" />
            <corners android:radius="25dp" />
        </shape>
    </item>
</selector>
